<Window x:Class="ProgrammerForFeetechServos.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="About Programmer For Feetech Servos" 
        Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Background="White">
    
    <Grid>
        <StackPanel Margin="40" VerticalAlignment="Center">
            <!-- Company Logo -->
            <Image Source="/Resources/Images/CompanyLogo.png" 
                   Height="90" Stretch="Uniform"
                   Margin="0,0,0,16"/>

            <!-- App Name -->
            <TextBlock Text="Programmer For Feetech Servos" 
                       FontSize="22" FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,8"/>

            <!-- Version -->
            <TextBlock FontSize="14" Foreground="#757575"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20">
                <Run Text="Version 1.0.2"/>
            </TextBlock>

            <!-- Copyright -->
            <TextBlock Text="Copyright © 2025 Fyrby Additive Manufacturing &amp; Engineering" 
                       FontSize="12" Foreground="#757575"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,0,0,4"/>
            
            <TextBlock Text="All rights reserved" 
                       FontSize="12" Foreground="#757575"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,16"/>

            <!-- Website Link -->
            <TextBlock HorizontalAlignment="Center">
                <Hyperlink NavigateUri="https://fyrbyadditive.com" 
                           RequestNavigate="Hyperlink_RequestNavigate"
                           Foreground="#2196F3">
                    <Run Text="https://fyrbyadditive.com" FontSize="12"/>
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
