<Window x:Class="ProgrammerForFeetechServos.Views.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Help - Programmer For Feetech Servos" 
        Height="750" Width="1100"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
        
        <Style x:Key="SubsectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
        
        <Style x:Key="BodyText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <Style x:Key="BulletText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="20,4,0,4"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Navigation -->
        <Border Grid.Column="0" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
            <StackPanel>
                <TextBlock Text="Help Topics" FontSize="18" FontWeight="SemiBold" 
                           Margin="16,16,16,12" Foreground="#212121"/>
                
                <ListBox x:Name="HelpTopicsListBox" BorderThickness="0" Background="Transparent"
                         SelectionChanged="HelpTopicsListBox_SelectionChanged">
                    <ListBoxItem Tag="Overview" Padding="16,10" IsSelected="True">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="â„¹" FontSize="16" Width="24" Margin="0,0,8,0"/>
                            <TextBlock Text="Overview" FontSize="13"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Tag="SystemRequirements" Padding="16,10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âœ“" FontSize="16" Width="24" Margin="0,0,8,0"/>
                            <TextBlock Text="System Requirements" FontSize="13"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Tag="GettingStarted" Padding="16,10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="â–¶" FontSize="16" Width="24" Margin="0,0,8,0"/>
                            <TextBlock Text="Getting Started" FontSize="13"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Tag="UsingTheApp" Padding="16,10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ‘†" FontSize="16" Width="24" Margin="0,0,8,0"/>
                            <TextBlock Text="Using the Application" FontSize="13"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Tag="Troubleshooting" Padding="16,10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ”§" FontSize="16" Width="24" Margin="0,0,8,0"/>
                            <TextBlock Text="Troubleshooting" FontSize="13"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Tag="Tips" Padding="16,10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ’¡" FontSize="16" Width="24" Margin="0,0,8,0"/>
                            <TextBlock Text="Tips &amp; Best Practices" FontSize="13"/>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- Splitter -->
        <GridSplitter Grid.Column="1" Width="1" Background="#E0E0E0" 
                      HorizontalAlignment="Center" VerticalAlignment="Stretch"/>

        <!-- Content Area -->
        <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="ContentPanel" Margin="32">
                <!-- Content will be loaded dynamically -->
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
